.new
  .new__header
    = image_tag 'logo.png', size: '200x80', class: 'logo'
  .new__user
    .new__user--post 
      %h2 会員情報入力
    = form_with model: @user, url: user_registration_path,　class:'boxes', local: true  do |f|
      = render "devise/shared/error_messages", resource: resource
      .boxes__field
        = f.label :'ニックネーム'
        %span 必須
        %br/
        = f.text_field :nickname, autofocus: true, placeholder:'例)フリマ太郎', class:'boxes__field__large-frame'
      .boxes__field
        = f.label :'メールアドレス'
        %span 必須
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'PC・携帯どちらでも可', class:'boxes__field__large-frame'
      .boxes__field
        = f.label :'パスワード'
        %span 必須
        %br/
        = f.password_field :password, autocomplete: "new-password", placeholder:'7文字以上の半角英数字', class:'boxes__field__large-frame'
      .boxes__field
        = f.label :'パスワード(再確認)'
        %span 必須
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'上記と同じ文字を入力', class:'boxes__field__large-frame'
        %h3 本人確認
        %p
        安心・安全にご利用いただくために、お客
        %br/
        様の本人情報の登録にご協力ください。他
        %br/
        のお客様に公開されることはありません。
      = f.fields_for :profile, Profile.new do |p|
        .boxes__field
          = p.label :'お名前(全角)'
          %span 必須
          %br/
          = p.text_field :lastname, placeholder:'例)山田', class:'boxes__field__middle-frame'
          = p.text_field :firstname, placeholder:'例)彩', class:'boxes__field__middle-frame'
        .boxes__field
          = p.label :'お名前カナ(全角)'
          %span 必須
          %br/
          = p.text_field :lastname_kana, placeholder:'例)ヤマダ', class:'boxes__field__middle-frame'
          = p.text_field :firstname_kana, placeholder:'例)アヤ', class:'boxes__field__middle-frame'
        .boxes__field
          = p.label :'郵便番号'
          %span 必須
          %br/
          = p.text_field :postal_code, placeholder:'例)123-4567', class:'boxes__field__middle-frame'
        .boxes__field
          = p.label :'都道府県'
          %span 必須
          %br/
          = p.text_field :prefecture, placeholder:'例)東京都', class:'boxes__field__large-frame'
        .boxes__field
          = p.label :'市区町村'
          %span 必須
          %br/
          = p.text_field :city, placeholder:'例)渋谷区', class:'boxes__field__large-frame'
        .boxes__field
          = p.label :'番地'
          %span 必須
          %br/
          = p.text_field :address, placeholder:'例)道玄坂2-23-12', class:'boxes__field__large-frame'
        .boxes__field
          = p.label :'建物名'
          %span 任意
          %br/
          = p.text_field :building, placeholder:'例)フォンティスビル7F', class:'boxes__field__large-frame'
        .boxes__field
          = p.label :'電話番号'
          %span 任意
          %br/
          = p.text_field :tell, placeholder:'例)012-3456-7890', class:'boxes__field__large-frame'
        .boxes__field
          = p.label :'生年月日'
          %span 必須
          %br/
          != sprintf(p.date_select(:birthday, with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
        .actions
          = p.submit "登録する", class:'actions__btn'
  .footer
