.wrapper
  .header
    = image_tag 'logo.png', size: '200x80', class: 'logo'
  .contents
    .contents__row
      %p アカウントをお持ちではない方はこちら
      = link_to '新規会員登録',  new_user_registration_path, class:'contents__row--btn'
    .login-form
      .field
        = link_to  'https://www.facebook.com/', class:'field__box', id:'f-link' do
          = icon('fab', 'facebook-square', class: 'field__box__icon-size')
          facebook
      .field
        = link_to  'https://www.google.co.jp/', class:'field__box', id:'g-link' do
          = icon('fab', 'google', class: 'field__box__icon-color')
          Google
    .login-form
      = form_with model: @user, url: user_session_path, local: true  do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'メールアドレス ', class:'field__box'
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder:'パスワード', class:'field__box'
          .actions
            = f.submit "ログイン", class:'actions__btn'
            %a{id: "forgot-password", href: "#"} パスワードをお忘れの方はこちら
  = render partial: 'shared/products_footer'