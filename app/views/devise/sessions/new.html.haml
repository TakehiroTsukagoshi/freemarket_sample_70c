.wrapper
  .header
    = image_tag 'logo.png', size: '200x80', class: 'logo'
  .contents
    .contents__row
      %p アカウントをお持ちではない方はこちら
      = link_to '新規会員登録',  'new_user_session_path', class:'contents__row--btn'
    .login-form
      .field
        = link_to 'facebookでログイン', 'https://www.facebook.com/', class:'field__box', id:'f-link'
      .field
        = link_to 'Googleでログイン', 'https://www.google.co.jp/', class:'field__box', id:'g-link'
    .login-form
      = form_with model: @user, url: user_registration_path, local: true  do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'メールアドレス ', class:'field__box'
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder:'パスワード', class:'field__box'
          .actions
            = f.submit "ログイン", class:'actions__btn'
            %a{id: "forgot-password", href: "#"} パスワードをお忘れの方はこちら
  .footer