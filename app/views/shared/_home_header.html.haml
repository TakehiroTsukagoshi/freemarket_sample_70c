.top-page
  .header
    .header-box
      .header-block
        .main-header
          .logo-icon
            = link_to image_tag "logo.png",size: "140x40"
          .search-form
            %input.form{placeholder:'キーワードから探す',type:'text'}
            = link_to image_tag "icon-search 1.png", class:'search',size: "20x20"
        .main-navi
          .left-navi
            = link_to 'カテゴリー'
            = link_to 'ブランド'
          .right-navi
            - if user_signed_in?
              = link_to 'ログアウト', '/users/sign_out', method: :delete
              = link_to 'マイページ', '#'
            - else
              = link_to 'ログイン', '/users/sign_in'
              = link_to '新規会員登録', '/users/sign_up'