                %li
                  = image_tag 'DinersClub.png', alt: 'DinersClub', height: '30', width: '40', class: 'DinersClub'
                %li
                  = image_tag 'discovercard.png', alt: 'discovercard', height: '30', width: '40', class: 'discovercard'
            .l-container__content__credit__info-container__input-form__expiration-date
              .l-container__content__credit__info-container__input-form__expiration-date__title
                有効期限
                .require
                  必須
              .l-container__content__credit__info-container__input-form__expiration-date__month-year
