            .l-container__content__credit__info-container__input-form__card-number
              .l-container__content__credit__info-container__input-form__card-number__title
                カード番号
                .require
                  必須
              %input.card-number{maxlength: "16", name: "number", placeholder: "半角数字のみ", type: "text", id: "payment_card_no"}/
              %ul.card-list
                %li
                  = image_tag 'visa.png', alt: 'visa', height: '30', width: '40', class: 'visa'
                %li
                  = image_tag 'master.png', alt: 'master', height: '30', width: '40', class: 'master'
                %li
                  = image_tag 'seison.png', alt: 'seison', height: '30', width: '40', class: 'seison'
                %li
